<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="480" prefWidth="850"
            xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.example.ugplayer.MainUIController">

    <top>
        <MenuBar>
            <menus>
                <Menu text="View">
                    <items>
                        <MenuItem onAction="#applyLightTheme" text="Light Mode"/>
                        <MenuItem onAction="#applyDarkTheme" text="Dark Mode"/>
                        <SeparatorMenuItem/>
                        <MenuItem onAction="#openMiniPlayer" text="iMuzik Mode"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <HBox alignment="CENTER_LEFT" spacing="30" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30"/>
            </padding>

            <!-- === CD Panel === -->
            <StackPane fx:id="cdPane" alignment="CENTER" prefWidth="300">
                <children>
                    <Circle fx:id="albumCover" fill="#c9c9ca" radius="130" stroke="DARKGRAY" strokeWidth="3"/>
                    <Circle fx:id="centerHole" fill="#b9b9b9" radius="30.0"/>
                    <Circle fx:id="centerHole1" fill="WHITE" layoutX="160.0" layoutY="207.0" radius="23.0"
                            smooth="false"/>
                </children>
            </StackPane>

            <!-- === Right Panel === -->
            <VBox alignment="CENTER" spacing="10">
                <children>
                    <ListView fx:id="songListView" prefHeight="250" prefWidth="350"/>
                    <Label fx:id="songTitleLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;"
                           text="Song Title"/>
                    <Label fx:id="artistLabel" style="-fx-font-size: 13px;" text="Artist"/>

                    <!-- === Controls === -->
                    <HBox alignment="CENTER" spacing="10">
                        <children>
                            <Button fx:id="prevButton" onAction="#playPreviousSong"
                                    style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-background-radius: 8;"
                                    text="â® Previous"/>
                            <Button fx:id="playButton" onAction="#playSong"
                                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8;"
                                    text="â–¶ Play"/>
                            <Button fx:id="pauseButton" onAction="#pauseSong"
                                    style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 8;"
                                    text="â¸ Pause"/>
                            <Button fx:id="nextButton" onAction="#playNextSong"
                                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 8;"
                                    text="Next â­"/>
                            <Label text="ðŸ”Š"/>
                            <Slider fx:id="volumeSlider" prefWidth="150"/>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </HBox>
    </center>
</BorderPane>
